{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",

  "jsxSingleQuote": true,
  "printWidth": 80,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",

  "experimentalSortImports": {
    "groups": ["side-effect", "type", "external", "internal"],
    "partitionByComment": true
  },

  "experimentalSortPackageJson": {
    "sortScripts": true
  },

  "experimentalTailwindcss": {
    "functions": ["clsx", "cva", "cn"],
    "stylesheet": "./kaze/app/globals.css"
  }
}
