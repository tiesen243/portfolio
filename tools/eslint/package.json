    "eslint-plugin-turbo": "^2.6.2",
    "typescript-eslint": "^8.48.1"
  },
  "devDependencies": {
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "eslint": "catalog:",
