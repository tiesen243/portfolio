{
  "name": "@yuki/kaze",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun --env-file ../.env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "bun --env-file ../.env next dev --port 3000",
    "format": "prettier --check . --ignore-path ../.gitignore",
    "lint": "bun --env-file ../.env next typegen && eslint",
    "start": "bun --env-file ../.env next start --port 3000",
    "typecheck": "bun --env-file ../.env next typegen && tsc --noEmit"
  },
  "prettier": "@yuki/prettier-config",
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@yuki/content": "workspace:*",
    "@yuki/data": "workspace:*",
    "@yuki/ui": "workspace:*",
    "@yuki/validators": "workspace:*",
    "fumadocs-ui": "^15.8.5",
    "next": "catalog:react",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "resend": "^6.1.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "catalog:tailwind",
    "@types/node": "catalog:",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@yuki/eslint-config": "workspace:*",
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@react-email/render": "^1.3.2",
    "prettier-plugin-tailwindcss": "catalog:",
    "shiki": "^3.13.0"
  }
}
