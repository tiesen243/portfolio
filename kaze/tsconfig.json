{
  "extends": "@yuki/tsconfig/next.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "fumadocs-mdx:collections/*": ["./.source/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".source/*.ts"
  ],
  "exclude": ["node_modules"]
}
