{
  "name": "@yuki/validators",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./contact": "./dist/contact.mjs",
    "./env": "./dist/env.mjs",
    "./mdx": "./dist/mdx.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "~dev": "tsdown --watch ./src"
  },
  "dependencies": {
    "@yuki/lib": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@yuki/oxc-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@yuki/oxc-config/format.json"
}
