{
  "name": "portfolio",
  "private": true,
  "homepage": "https://tiesen.id.vn",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiesen243/portfolio.git"
  },
  "workspaces": [
    "kaze",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && git clean -xdf node_modules",
    "dev": "turbo dev --continue",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "turbo": "^2.8.12"
  },
  "packageManager": "bun@1.3.0",
  "catalogs": {
    "prod": {
      "@tanstack/react-query": "^5.90.12",
      "zod": "^4.3.6"
    },
    "dev": {
      "@types/node": "^25.3.2",
      "tsdown": "^0.20.3",
      "typescript": "^5.9.3"
    },
    "react": {
      "@types/react": "^19.2.14",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.4",
      "react-dom": "^19.2.4"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.2.1",
      "@tailwindcss/vite": "^4.1.18",
      "tailwindcss": "^4.2.1"
    }
  }
}
