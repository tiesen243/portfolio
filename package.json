{
  "name": "portfolio",
  "private": true,
  "homepage": "https://tiesen.id.vn",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiesen243/portfolio.git"
  },
  "workspaces": [
    "kaze",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "bump-deps": "bunx npm-check-updates --deep -u && bun install",
    "clean:workspaces": "turbo run clean && git clean -xdf node_modules",
    "container:build": "docker build -t portfolio .",
    "container:start": "docker run --env-file .env -p 3000:3000 --rm -d portfolio",
    "container:stop": "docker stop $(docker ps -q --filter ancestor=portfolio)",
    "dev": "turbo dev --continue -F !@yuki/infra",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "infra:deploy": "turbo run deploy --filter=@yuki/infra",
    "infra:destroy": "turbo run destroy --filter=@yuki/infra",
    "infra:dev": "turbo run dev --filter=@yuki/infra",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "turbo": "^2.8.0"
  },
  "packageManager": "bun@1.3.0",
  "catalogs": {
    "prod": {
      "@tanstack/react-query": "^5.90.12",
      "zod": "^4.3.6"
    },
    "dev": {
      "@types/node": "^25.1.0",
      "tsdown": "^0.20.1",
      "typescript": "^5.9.3"
    },
    "react": {
      "@types/react": "^19.2.10",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.4",
      "react-dom": "^19.2.4"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.1.18",
      "@tailwindcss/vite": "^4.1.18",
      "tailwindcss": "^4.1.18"
    }
  }
}
