{
  "name": "portfolio",
  "private": true,
  "homepage": "https://tiesen.id.vn",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiesen243/portfolio.git"
  },
  "workspaces": [
    "kaze",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "bump-deps": "bunx npm-check-updates --deep -u && bun install",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "container:build": "docker build -t portfolio .",
    "container:start": "docker run --env-file .env -p 3000:3000 --rm -d portfolio",
    "container:stop": "docker stop $(docker ps -q --filter ancestor=portfolio)",
    "dev": "turbo dev --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/prettiercache",
    "postinstall": "bun run lint:ws",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/eslintcache",
    "lint:ws": "bunx sherif@latest",
    "typecheck": "turbo run typecheck"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxSingleQuote": true
  },
  "devDependencies": {
    "turbo": "^2.6.1"
  },
  "packageManager": "bun@1.3.1",
  "catalog": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tanstack/react-query": "^5.90.11",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsdown": "^0.17.0-beta.5",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  },
  "catalogs": {
    "react": {
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.1.17",
      "@tailwindcss/vite": "^4.1.17",
      "tailwindcss": "^4.1.17"
    },
    "trpc": {
      "@trpc/server": "^11.7.2",
      "@trpc/client": "^11.7.2",
      "@trpc/tanstack-react-query": "^11.7.2",
      "superjson": "^2.2.6"
    },
    "orpc": {
      "@orpc/server": "^1.11.3",
      "@orpc/client": "^1.11.3",
      "@orpc/react-query": "^1.11.3"
    }
  }
}
